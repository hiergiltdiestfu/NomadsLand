<Defs>  

  <ThingDef ParentName="BuildingBase">
    <defName>NP_Nomadism_PastureFence</defName>
    <label>nomads' fence</label>
    <description>A very light pasture fence made of intertwined sticks and twigs, useful for very quickly putting up temporary pens. Some kinds of animals can get past fences. Predators will not hunt creatures on the other side of a fence, but may still wander inside.</description>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/Linked/Fence</texPath> <!-- todo -->
      <graphicClass>Graphic_Appearances</graphicClass>
      <linkType>Asymmetric</linkType>
      <linkFlags>
        <li>Fences</li>
      </linkFlags>
      <asymmetricLink>
        <linkFlags>
          <li>Wall</li>
          <li>Rock</li>
        </linkFlags>
        <linkToDoors>true</linkToDoors>
        <drawDoorBorderEast>
          <color>(0,0,0)</color>
          <size>(0.04, 0.77)</size>
          <offset>(0.5, 0, -0.08)</offset>
        </drawDoorBorderEast>
        <drawDoorBorderWest>
          <color>(0,0,0)</color>
          <size>(0.04, 0.77)</size>
          <offset>(-0.5, 0, -0.08)</offset>
        </drawDoorBorderWest>
      </asymmetricLink>
      <shadowData>
        <volume>(0.3, 0.5, 0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
      <damageData>
        <rect>(0.35,0.1,0.3,0.7)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Linked/Fence_MenuIcon</uiIconPath> <!-- todo -->
    <uiIconPathsStuff>
      <li>
        <appearance>Metal</appearance> <!-- todo -->
        <iconPath>Things/Building/Linked/FenceMetal_MenuIcon</iconPath> <!-- todo -->
      </li>
    </uiIconPathsStuff>
    <statBases>
      <MaxHitPoints>1</MaxHitPoints> <!-- todo went from 40 to 1 -->
      <WorkToBuild>3</WorkToBuild> <!-- todo went from 70 to 3 -->
      <Flammability>1.0</Flammability> <!-- todo can increase? -->
    </statBases>
    <costStuffCount>1</costStuffCount>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>75</pathCost> <!-- todo went from 80 to 75 -->
    <blockWind>false</blockWind>
    <fillPercent>0.20</fillPercent> <!-- todo went from .25 to .2 -->
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <useStuffTerrainAffordance>true</useStuffTerrainAffordance>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Structure</designationCategory>
    <uiOrder>2021</uiOrder>
    <canOverlapZones>false</canOverlapZones>
    <fertility>0</fertility>
    <stuffCategories> <!-- todo removed Metallic and Stony -->

      <li>Woody</li>

    </stuffCategories>
    <building>
      <isInert>true</isInert>
      <isFence>true</isFence>
      <isPlaceOverableWall>true</isPlaceOverableWall>
      <ai_chillDestination>false</ai_chillDestination>
      <ai_neverTrashThis>true</ai_neverTrashThis>
      <relatedBuildCommands>
        <li>PenMarker</li>
        <li>FenceGate</li>
      </relatedBuildCommands>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/Fence_Blueprint</texPath> <!-- todo -->
        <graphicClass>Graphic_Appearances</graphicClass>
      </blueprintGraphicData>
      <paintable>true</paintable>
    </building>
	<researchPrerequisites>
      <li>NP_Nomads_Nomadic_Knowledge</li>
    </researchPrerequisites>
  </ThingDef>

